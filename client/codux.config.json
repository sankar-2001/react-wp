{  
    "$schema": "https://wixplosives.github.io/codux-config-schema/codux.config.schema.json",
    "newComponent": {
        "componentsPath": "src/components"
    },
    "addPanel": {
        "assets": ["@codux-boards/react-blueprint"]
    },    
    "boardGlobalSetup": "./src/_codux/boards-global-setup.ts",
    "scripts": {
        "install": {
            "title": "Dckr: Install",
            "description": "Run install",
            "command": "docker exec -w /workspaces/react-wp/client -u node node-dev yarn install"
        },
        "build": {
            "title": "Dckr: Build Project",
            "description": "Builds the project for use",
            "command": "docker exec -w /workspaces/react-wp/client -u node node-dev yarn run build"
        },
        "install & build": {
            "title": "Dckr: Initialize Codux",
            "description": "Installs dependencies and builds Codux",
            "run": [
                "install",
                "build"
            ],
            "trigger": [
                "checkout",
                "pull",
                "setup"
            ]
        }
    }
}  
